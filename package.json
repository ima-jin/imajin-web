{
  "name": "imajin-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:sync": "tsx scripts/sync-products.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:verify": "tsx scripts/verify-products.ts",
    "db:test": "tsx scripts/test-connection.ts",
    "test:db:create": "docker exec imajin-db-local psql -U imajin -d postgres -c \"CREATE DATABASE imajin_test;\"",
    "test:db:drop": "docker exec imajin-db-local psql -U imajin -d postgres -c \"DROP DATABASE IF EXISTS imajin_test;\"",
    "test:db:reset": "tsx scripts/reset-test-db.ts",
    "test:db:seed": "DATABASE_URL=postgresql://imajin:imajin_dev@localhost:5435/imajin_test tsx scripts/sync-products.ts",
    "docker:dev": "docker compose -f docker/docker-compose.local.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.local.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.local.yml logs -f",
    "docker:restart": "docker compose -f docker/docker-compose.local.yml restart",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:smoke": "vitest run tests/smoke",
    "test:smoke:ci": "vitest run tests/smoke --reporter=verbose",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "validate:content": "tsx scripts/validate-content.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "next": "16.0.0",
    "postgres": "^3.4.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.0.1",
    "msw": "^2.11.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
